{
  "name": "e-commerce-ninjas-bn",
  "version": "1.0.0",
  "description": "Backend repo for team projecct",
  "main": "index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "nodemon src/index.ts",
    "test": "nyc cross-env NODE_ENV=test mocha --require ts-node/register './src/**/*.spec.ts' --timeout 300000 --exit",
    "coveralls": "nyc --reporter=lcov --reporter=text-lcov npm test | coveralls",
    "coverage": "nyc mocha --require ts-node/register 'src/**/*.spec.ts' --timeout 300000 --exit"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": true,
    "all": true,
    "include": [
      "src/**/!(*.test.*).[tj]s?(x)"
    ],
    "exclude": [
      "src/index.spec.ts",
      "src/databases/**/*.*",
      "src/modules/**/test/*.spec.ts"
    ],
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "coverage",
    "lines": 40
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "chai": "^4.4.1",
    "chai-http": "^4.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "coverage": "^0.4.1",
    "coveralls": "^3.1.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "mocha": "^10.4.0",
    "morgan": "^1.10.0",
    "nodemon": "^3.1.0",
    "nyc": "^15.1.0",
    "pg": "^8.11.5",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.6",
    "@types/morgan": "^1.9.9",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "cross-env": "^7.0.3"
  }
}
